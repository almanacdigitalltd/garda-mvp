{% requireLogin %}

{% extends "_layouts/_base" %}

{% if entry.parent %}
    {% set category = entry.parent.productCategory.one() %}
{% else %}
    {% set category = entry.productCategory.one() %}
{% endif %}


{% block content %}

    {% include "_layouts/_header" with {
        title: "Training - Centre",
        subTitle: category.title,
        subTitleWeight: 'medium'
    } %}
    
    <div class="o-main o-main--shadow">
        {% include "products/_types/" ~ entry.type %}
    </div>

    {% set footerSettings = {} %}
    {% if entry.type.handle != 'product' %}
        {% set footerSettings = {
            takeQuizHide: true
        } %}
    {% endif %}

    {% include "_layouts/_footer" with footerSettings %}

{% endblock %}